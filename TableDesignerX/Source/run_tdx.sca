[ RECORD]
[PLATFORM] WINDOWS 
[UNIQUEID] _25V0MBNUZ
[CLASS] commandbutton
[BASECLASS] commandbutton
[OBJNAME] Command1
[PARENT] Form1
[START PROPERTIES]
Top = 233
Left = 282
Height = 22
Width = 138
Caption = "Modify Table Structure "
Name = "Command1"
[END PROPERTIES]
[START METHODS]
PROCEDURE Click
LOCAL oTDX, cTable, nCount, lFound

cTable = GETFILE('dbf')

IF !EMPTY(cTable)
	*** BYN 27/08/2007 added logic to check for existance of table
	***                name in the list if so just open it
	lFound = .F.

*!*		FOR nCount = 1 TO THISFORM.TDXList.LISTCOUNT
*!*			IF LOWER(cTable) = LOWER(THISFORM.TDXList.LIST[nCount])
*!*				lFound = .T.

*!*				EXIT
*!*			ENDIF
*!*		ENDFOR

	LOCAL nCnt,oTdx

	FOR nCount = 1 TO THISFORM.TDXList.LISTCOUNT
		*** BYN 27/08/2007 compare table pathname
		IF LOWER(thisform.aTDX[nCount, 1]) = LOWER(ctable)
			oTdx=THISFORM.aTdx[nCount,2]

			IF TYPE('oTDX.oFrontForm.name') = 'C'
				*** BYN 27/08/2007 if tdx session is open
				oTdx.oFrontForm.WINDOWSTATE=0
				oTdx.oFrontForm.Pageframe1.Page1.TableFieldsGrid.SETFOCUS()
			ELSE
				*** BYN 27/08/2007 else modify in a tdx session
				oTdx.modify_structure(THISFORM.TDXList.LIST(nCount))
			ENDIF

			lFound = .T.
		ENDIF
	ENDFOR


	*** BYN 27/08/2007 a new table name selected
	IF NOT lFound
		THISFORM.TDXList.ADDITEM(PROPER(cTable))

		oTDX=CREATEOBJECT('TableDesignerX')          && Create instance of TableDesigner Object

		THISFORM.aTDX(THISFORM.tdxcount,1) = cTable  && Table Name
		THISFORM.aTDX(THISFORM.tdxcount,2) = oTDX    && Store Object reference to array element for later use
		THISFORM.tdxcount=THISFORM.tdxcount+1

		oTDX.modify_structure(cTable)
	ENDIF
ENDIF

ENDPROC
[END METHODS]

