LOCAL oTDX

FOR i=1 TO ALEN(THISFORM.aTDX,1)
	oTDX=THISFORM.aTDX(i,2)

	IF TYPE('oTDX') ='O'
		IF TYPE('oTDX.oFrontForm.name') = 'C'
			oTDX.oFrontForm.RELEASE
		ENDIF
	ENDIF
NEXT

